function enterSite() {
    document.querySelector(".lightbox").style.animation = "fadeOut 0.8s ease-in-out forwards";
    setTimeout(() => {
        window.location.href = "/home/"; // 進入主頁
    }, 800);
}

// 添加淡出動畫
document.addEventListener("DOMContentLoaded", () => {
    document.querySelector(".lightbox").style.animation = "fadeIn 1.5s ease-in-out";
});
